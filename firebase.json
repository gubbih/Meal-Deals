{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "predeploy": [
    "npm install",
    "npm run build"
  ],
  "postdeploy": [
    "serve -s build"
  ]
}